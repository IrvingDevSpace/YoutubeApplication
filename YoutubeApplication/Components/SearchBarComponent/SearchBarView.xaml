<UserControl x:Class="YoutubeApplication.Components.SearchBarComponent.SearchBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeApplication.Components.SearchBarComponent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <SolidColorBrush x:Key="YoutubeBorderColor"
                         Color="#CCCCCC" />
        <SolidColorBrush x:Key="YoutubeFocusColor"
                         Color="#1C62B9" />
        <SolidColorBrush x:Key="YoutubeButtonBg"
                         Color="#F8F8F8" />
        <SolidColorBrush x:Key="YoutubeButtonHover"
                         Color="#F0F0F0" />
        <Geometry x:Key="SearchIconGeometry">M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z</Geometry>
    </UserControl.Resources>

    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border x:Name="InputBorder"
                Grid.Column="0"
                BorderThickness="1,1,0,1"
                CornerRadius="20,0,0,20"
                Height="40"
                Background="White">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush"
                            Value="{StaticResource YoutubeBorderColor}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsFocused, ElementName=SearchInput}"
                                     Value="True">
                            <Setter Property="BorderBrush"
                                    Value="{StaticResource YoutubeFocusColor}" />
                            <Setter Property="BorderThickness"
                                    Value="1.5,1.5,0,1.5" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid Margin="16,0,8,0">
                <TextBlock Text="搜尋"
                           VerticalAlignment="Center"
                           Foreground="#888888"
                           FontSize="16"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility"
                                    Value="Collapsed" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}"
                                                   Value="" />
                                        <Condition Binding="{Binding IsFocused, ElementName=SearchInput}"
                                                   Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                </MultiDataTrigger>
                                <DataTrigger Binding="{Binding Keyword}"
                                             Value="{x:Null}">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBox x:Name="SearchInput"
                         Text="{Binding Keyword}"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         FontSize="16"
                         CaretBrush="Black">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter"
                                    Command="{Binding SearchCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
            </Grid>
        </Border>

        <Button Grid.Column="1"
                Command="{Binding SearchCommand}"
                Width="64"
                Height="40"
                Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="BtnBorder"
                            Background="{StaticResource YoutubeButtonBg}"
                            BorderBrush="{StaticResource YoutubeBorderColor}"
                            BorderThickness="1"
                            CornerRadius="0,20,20,0">
                        <Path Data="{StaticResource SearchIconGeometry}"
                              Fill="#333333"
                              Stretch="Uniform"
                              Width="18"
                              Height="18"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="BtnBorder"
                                    Property="Border.Background"
                                    Value="{StaticResource YoutubeButtonHover}" />
                            <Setter TargetName="BtnBorder"
                                    Property="Border.BorderBrush"
                                    Value="#AAAAAA" />
                        </Trigger>

                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="BtnBorder"
                                    Property="Border.Background"
                                    Value="#E5E5E5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
