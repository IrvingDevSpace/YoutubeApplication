<UserControl x:Class="YoutubeApplication.Views.SearchFilter.SearchFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeApplication.Views.SearchFilter"
             xmlns:segmented="clr-namespace:YoutubeApplication.Components.SegmentedComponent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">

            <TextBlock Text="類型"
                       FontWeight="Bold"
                       Margin="0,5" />
            <segmented:SegmentedView Options="{Binding DataContext.TypeOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      Option="{Binding DataContext.SelectedType, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <TextBlock Text="片長"
                       FontWeight="Bold"
                       Margin="0,5" />
            <segmented:SegmentedView Options="{Binding DataContext.DurationOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      Option="{Binding DataContext.SelectedDuration, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <TextBlock Text="上傳日期"
                       FontWeight="Bold"
                       Margin="0,15,0,5" />
            <segmented:SegmentedView Options="{Binding DataContext.DateOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      Option="{Binding DataContext.SelectedDate, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <TextBlock Text="優先順序"
                       FontWeight="Bold"
                       Margin="0,5" />
            <segmented:SegmentedView Options="{Binding DataContext.OrderOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      Option="{Binding DataContext.SelectedOrder, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        </StackPanel>
    </ScrollViewer>
</UserControl>
