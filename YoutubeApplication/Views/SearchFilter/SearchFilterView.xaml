<UserControl x:Class="YoutubeApplication.Views.SearchFilter.SearchFilterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YoutubeApplication.Views.SearchFilter"
             xmlns:segmented="clr-namespace:YoutubeApplication.Components.SegmentedComponent"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 類型 -->
            <segmented:SegmentedView Grid.Column="0"
                                     Title="類型"
                                     Options="{Binding DataContext.TypeOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Option="{Binding DataContext.SelectedType, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <!-- 片長 -->
            <segmented:SegmentedView Grid.Column="1"
                                     Title="片長"
                                     Options="{Binding DataContext.DurationOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Option="{Binding DataContext.SelectedDuration, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <!-- 上傳日期 -->
            <segmented:SegmentedView Grid.Column="2"
                                     Title="上傳日期"
                                     Options="{Binding DataContext.DateOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Option="{Binding DataContext.SelectedDate, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <!-- 優先順序 -->
            <segmented:SegmentedView Grid.Column="3"
                                     Title="優先順序"
                                     Options="{Binding DataContext.OrderOptions, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                     Option="{Binding DataContext.SelectedOrder, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Grid>
    </ScrollViewer>

</UserControl>
