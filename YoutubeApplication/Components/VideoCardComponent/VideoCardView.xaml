<UserControl x:Class="YoutubeApplication.Components.VideoCardComponent.VideoCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YoutubeApplication.Components.VideoCardComponent"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Border Padding="12"
            CornerRadius="12">
        <Border.InputBindings>
            <MouseBinding MouseAction="LeftClick"
                          Command="{Binding OpenVideoCommand}" />
        </Border.InputBindings>

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background"
                        Value="#FF0F0F0F" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter Property="Background"
                                Value="#2E1F18" />
                        <Setter Property="Cursor"
                                Value="Hand" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--<Border Grid.Row="0"
                    CornerRadius="12"
                    Margin="0,0,0,12">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding VideoCard.ImgSrc}"
                                Stretch="UniformToFill" />
                </Border.Background>

                -->
            <!--<Grid x:Name="OverlayLayer">
                <Border Background="#CC000000" CornerRadius="4" 
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Padding="4,2" Margin="8">
                    <TextBlock Text="10:24" Foreground="White" FontSize="10" FontWeight="Bold"/>
                </Border>
            </Grid>-->
            <!--
            </Border>-->

            <Border Grid.Row="0"
                    CornerRadius="12"
                    Margin="0,0,0,12"
                    ClipToBounds="True">
                <Image Source="{Binding VideoCard.ImgSrc, TargetNullValue={x:Null}}"
                       Stretch="UniformToFill"
                       RenderOptions.BitmapScalingMode="HighQuality" />
            </Border>

            <TextBlock Grid.Row="1"
                       Text="{Binding VideoCard.Title}"
                       FontSize="16"
                       Foreground="#FFF1F1F1"
                       TextWrapping="Wrap"
                       MaxHeight="45"
                       TextTrimming="CharacterEllipsis" />

            <TextBlock Grid.Row="2"
                       Text="{Binding VideoCard.ChannelName}"
                       FontSize="14"
                       Foreground="#FFAAAAAA" />

            <TextBlock Grid.Row="3"
                       Text="{Binding VideoCard.ViewSummary}"
                       FontSize="14"
                       Foreground="#FFAAAAAA" />

            <TextBlock Grid.Row="4"
                       Text="頻道精選預留"
                       FontSize="10"
                       Foreground="#FFAAAAAA" />
        </Grid>
    </Border>
</UserControl>
