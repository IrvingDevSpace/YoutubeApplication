<UserControl x:Class="YoutubeApplication.Views.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YoutubeApplication.Views.Home"
             xmlns:search="clr-namespace:YoutubeApplication.Components.SearchBarComponent"
             xmlns:video="clr-namespace:YoutubeApplication.Components.VideoCardComponent"
             xmlns:pagination="clr-namespace:YoutubeApplication.Components.PaginationComponent"
             xmlns:filter="clr-namespace:YoutubeApplication.Views.SearchFilter"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="10"
                    HorizontalAlignment="Center">

            <search:SearchBarView Keyword="{Binding Keyword}"
                                  OnSearchCommand="{Binding OnSearchCommand}"
                                  Width="400" />

            <Button Content="篩選"
                    Margin="10,0,0,0"
                    Padding="12,6"
                    Command="{Binding DataContext.OpenSearchFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </StackPanel>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding VideoCards}"
                 BorderThickness="0"
                 Background="Transparent"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="5"
                                 VerticalAlignment="Top" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <video:VideoCardView VideoCard="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                         Margin="8" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Row="1">

            <ProgressBar IsIndeterminate="True"
                         Width="200"
                         Height="20"
                         Margin="0,20,0,0"
                         VerticalAlignment="Center">
                <ProgressBar.Style>
                    <Style TargetType="ProgressBar">
                        <Setter Property="Visibility"
                                Value="Hidden" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}"
                                         Value="True">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ProgressBar.Style>
            </ProgressBar>
        </Grid>
        <pagination:PaginationView Total="{Binding DataContext.Total, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   PageIndex="{Binding DataContext.PageIndex, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   PageSize="{Binding DataContext.PageSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   OnPageIndexChangeCommand="{Binding DataContext.OnPageIndexChangeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   OnPageSizeChangeCommand="{Binding DataContext.OnPageSizeChangeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Grid.Row="2"
                                   Margin="0,20" />

        <Popup IsOpen="{Binding IsSearchFilterOpen}"
               Placement="Center"
               StaysOpen="False">
            <Border Width="420"
                    Background="GhostWhite"
                    CornerRadius="10"
                    Padding="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="18"
                                      ShadowDepth="2"
                                      Opacity="0.25" />
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="搜尋篩選"
                               FontWeight="Bold"
                               FontSize="16"
                               VerticalAlignment="Center" />

                    <filter:SearchFilterView Grid.Row="1"
                                             DataContext="{Binding Filter}" />

                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Content="套用"
                                Padding="12,6"
                                Margin="0,0,8,0"
                                Command="{Binding ApplySearchFilterCommand}" />
                        <Button Content="取消"
                                Padding="12,6"
                                Command="{Binding CloseSearchFilterCommand}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Popup>

    </Grid>
</UserControl>
